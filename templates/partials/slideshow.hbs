<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to Our University</title>
    <script defer src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" integrity="sha384-rOA1PnstxnOBLzCLMcre8ybwbTmemjzdNlILg8O7z1lUkLXozs4DHonlDtnE7fpc"  crossorigin="anonymous"></script>
    <style>

        .slider-container {
            /* Remove the flex: 1 property */
            width: 100%;
            height: 150px;
            overflow: hidden;
            background-color: blue;
            border-bottom: 5px solid #055726;
        }
        @media only screen and (max-width: 768px) {
            .slider-container {
            /* Remove the flex: 1 property */
            width: 100%;
            height: 80px;
            overflow: hidden;
            background-color: rgb(255, 255, 255);
            border-bottom: 5px solid #055726;
        }
        }
        

        .slider {
            display: flex;
            transition: transform 0.3s ease-in-out;
            width: auto;

        }

        .slide {
            flex: 0 0 100%;
            position: relative;
        }

        .slide img {
            width: 100%;
            height: auto;
        }

        .slider-button {
            position: absolute;
            top: 50%;
            color: rgb(255, 0, 0) ;
            border: none;
            padding: 20px;
            cursor: pointer;
            font-size: 25px;
            background:#30313300;
            border-radius: 10px;

        }
        .slider-button:hover { 
           
            color: rgb(106, 106, 255);
            font-size: 25px;
        
        }
        
        .prev-button {
            left: 0;
        }

        .next-button {
            right: 0;
        }

        .slide-indicators {
              position: absolute;
            display: flex;
           left: 50%; /* Center horizontally */
           top: 90%;

    display: flex;
    justify-content: center;
           


    
        }

        .slide-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.503);
            margin: 0 10px;
 
            
        }

        .slide-indicator.active {
            background-color: rgba(0, 0, 0, 0.7);
        }

       
    </style>
</head>
<body class="container_ss">


    <div class="slider-container">
        <div class="slider">
            <div class="slide">
                <button class="slider-button prev-button"><i class="fas fa-chevron-left"></i></button>
                <img src="./images/ss1.png" alt="Slide 1">
                <button class="slider-button next-button"><i class="fas fa-chevron-right"></i></button>
                

            </div>
            <div class="slide">
                <button class="slider-button prev-button"><i class="fas fa-chevron-left"></i></button>
                <img src="./images/ss2.png" alt="Slide 2">
                         <button class="slider-button next-button"><i class="fas fa-chevron-right"></i></button>
        
             </div>
             <div class="slide">
                <button class="slider-button prev-button"><i class="fas fa-chevron-left"></i></button>
                <img src="./images/ss3.png" alt="Slide 2">
                         <button class="slider-button next-button"><i class="fas fa-chevron-right"></i></button>
        
             </div>
         </div>

           
        
       
    </div>

<script>
    const slider = document.querySelector('.slider');
    const slideIndicators = document.querySelectorAll('.slide-indicator');
    const prevButtons = document.querySelectorAll('.prev-button');
    const nextButtons = document.querySelectorAll('.next-button');
    let slideIndex = 0;

    function showSlide(index) {
        slider.style.transform = `translateX(-${index * 100}%)`;
        slideIndicators.forEach((indicator, i) => indicator.classList.toggle('active', i === index));
    }

    nextButtons.forEach(button => button.addEventListener('click', () => showSlide(++slideIndex % slider.children.length)));
    prevButtons.forEach(button => button.addEventListener('click', () => showSlide((slideIndex - 1 + slider.children.length) % slider.children.length)));

    setInterval(() => showSlide(++slideIndex % slider.children.length), 5000); // Change slide every 5 seconds
</script>

</body>
</html>
